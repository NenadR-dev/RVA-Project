<UserControl x:Class="GSPClient.View.AutobusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GSPClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300">
    <Grid Background="#FFDEDEDE">
        <Grid Height="50" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal">
                <Label Content="Oznaka" Width="75" Height="50" FontSize="16"/>
                <TextBox x:Name="OznakaBox" Width="175" Height="40" FontSize="16"/>
            </StackPanel>
        </Grid>
        <Grid VerticalAlignment="Bottom" Height="50">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="AddAutobusBtn" Click="AddAutobusBtn_Click" Content="Add" Height="50" Width="125" FontSize="16" BorderThickness="2"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="ErrorMSG" Text="" FontSize="16"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
