<UserControl x:Class="GSPClient.View.AddControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GSPClient.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#FFDEDEDE">
        <Grid VerticalAlignment="Top" Height="50">
            <StackPanel Orientation="Horizontal">
                <Label Height="25">Select type:</Label>
                <ComboBox Height="25" Width="150" SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBoxItem x:Name="ItemLinija">
                        <TextBlock x:Name="Linija" Text="Linija"/>
                    </ComboBoxItem>
                    <ComboBoxItem x:Name="ItemAutobus">
                        <TextBlock x:Name="Autobus" Text="Autobus"/>
                    </ComboBoxItem>
                    <ComboBoxItem x:Name="ItemSofer">
                        <TextBlock x:Name="Sofer" Text="Vozac"/>
                    </ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Grid>
        <Grid x:Name="OptionGrid" VerticalAlignment="Top" Height="250" Margin="0,50,0,0">
            
        </Grid>
    </Grid>
</UserControl>
